{
    "name": "sumem",
    "version": "0.0.1",
    "description": "CLI tool for summing application memory usage",
    "type": "module",
    "main": "dist/index.js",
    "bin": {
        "sumem": "dist/cli.js"
    },
    "scripts": {
        "build": "tsc",
        "test": "node --test dist/**/*.test.js",
        "format": "prettier --write \"src/**/*.ts\"",
        "format:check": "prettier --check \"src/**/*.ts\"",
        "lint": "eslint \"src/**/*.ts\"",
        "lint:fix": "eslint \"src/**/*.ts\" --fix"
    },
    "keywords": [
        "cli",
        "memory",
        "process",
        "monitoring",
        "system"
    ],
    "author": "Mike Gouline",
    "license": "MIT",
    "files": [
        "dist",
        "README.md",
        "LICENSE"
    ],
    "engines": {
        "node": ">=18.0.0"
    },
    "devDependencies": {
        "@eslint/js": "^9.37.0",
        "@types/node": "^20.19.22",
        "eslint": "^9.37.0",
        "globals": "^16.4.0",
        "prettier": "^3.6.2",
        "typescript": "^5.0.0",
        "typescript-eslint": "^8.46.1"
    },
    "dependencies": {
        "commander": "^14.0.1"
    }
}
