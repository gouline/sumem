{
    "name": "sumem",
    "version": "0.0.1",
    "description": "CLI tool for summing application memory usage",
    "repository": "gouline/sumem",
    "type": "module",
    "main": "dist/index.js",
    "bin": {
        "sumem": "dist/cli.js"
    },
    "scripts": {
        "build": "tsc",
        "dev": "npm run build && node dist/cli.js",
        "test": "node --test dist/",
        "format": "prettier --write \"src/**/*.ts\"",
        "format:check": "prettier --check \"src/**/*.ts\"",
        "lint": "eslint \"src/**/*.ts\"",
        "lint:fix": "eslint \"src/**/*.ts\" --fix",
        "prepare": "husky"
    },
    "keywords": [
        "cli",
        "memory",
        "process",
        "monitoring",
        "system"
    ],
    "author": "Mike Gouline",
    "license": "MIT",
    "files": [
        "dist",
        "README.md",
        "LICENSE"
    ],
    "devDependencies": {
        "@eslint/js": "^9.37.0",
        "@types/node": "^20.19.22",
        "eslint": "^9.37.0",
        "globals": "^16.4.0",
        "husky": "^9.1.7",
        "lint-staged": "^16.2.4",
        "prettier": "^3.6.2",
        "typescript": "^5.0.0",
        "typescript-eslint": "^8.46.1"
    },
    "dependencies": {
        "commander": "^14.0.1"
    },
    "lint-staged": {
        "src/**/*.ts": [
            "prettier --write",
            "eslint --fix"
        ]
    }
}
